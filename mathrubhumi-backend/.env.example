# Django Security Settings
# ========================
# Copy this file to .env and fill in the values.
# IMPORTANT: Keep .env secret! Never commit to version control.

# Required: Django secret key for cryptographic signing
# Generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (set to false in production)
DJANGO_DEBUG=true

# Allowed hosts (comma-separated, required when DEBUG=false)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ======================
DB_NAME=mathrubhumi
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (for frontend communication)
# ==========================================
DJANGO_CORS_ALLOW_ALL_ORIGINS=false
DJANGO_CORS_ALLOW_CREDENTIALS=true
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000

# CSRF Settings
# =============
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Security Settings (these are secure by default when DEBUG=false)
# ================================================================
# Override for local development:
DJANGO_SESSION_COOKIE_SECURE=false
DJANGO_CSRF_COOKIE_SECURE=false
DJANGO_SECURE_SSL_REDIRECT=false
DJANGO_SECURE_HSTS_SECONDS=0

# Enable this if behind a reverse proxy that sets X-Forwarded-Proto
# DJANGO_SECURE_PROXY_SSL_HEADER=true
